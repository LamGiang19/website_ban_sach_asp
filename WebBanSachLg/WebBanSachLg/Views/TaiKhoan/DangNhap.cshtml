@model WebBanSachLg.Models.DangNhapViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card auth-card">
                    <div class="card-header auth-card-header">
                        <i class="fas fa-sign-in-alt"></i>
                        <h3>Đăng nhập</h3>
                    </div>
                    <div class="card-body auth-card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-action="DangNhap" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="auth-form-group">
                                <label asp-for="TenDangNhap"></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="far fa-user"></i>
                                    </span>
                                    <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" autofocus />
                                </div>
                                <span asp-validation-for="TenDangNhap" class="field-validation-error"></span>
                            </div>

                            <div class="auth-form-group">
                                <label asp-for="MatKhau"></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="far fa-lock"></i>
                                    </span>
                                    <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" />
                                </div>
                                <span asp-validation-for="MatKhau" class="field-validation-error"></span>
                            </div>

                            <div class="auth-checkbox">
                                <input asp-for="GhiNho" type="checkbox" id="GhiNho" />
                                <label asp-for="GhiNho" for="GhiNho"></label>
                            </div>

                            <button type="submit" class="auth-submit-btn">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </button>

                            <div class="auth-links">
                                <p>Chưa có tài khoản? <a asp-action="DangKy"><i class="far fa-user-plus"></i> Đăng ký ngay</a></p>
                                <p>
                                    <a asp-action="QuenMatKhau">
                                        <i class="far fa-question-circle"></i> Quên mật khẩu?
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

