@model WebBanSachLg.Models.DoiMatKhauViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu - Vua Sách Cũ";
}

<div class="container mt-4">
    <h2><i class="fas fa-key"></i> Đổi mật khẩu</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-orange text-white">
                    <h5 class="mb-0">Thay đổi mật khẩu</h5>
                </div>
                <div class="card-body">
                    <form asp-action="DoiMatKhau" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="MatKhauHienTai" class="form-label"></label>
                            <input asp-for="MatKhauHienTai" class="form-control" />
                            <span asp-validation-for="MatKhauHienTai" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MatKhauMoi" class="form-label"></label>
                            <input asp-for="MatKhauMoi" class="form-control" />
                            <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="XacNhanMatKhauMoi" class="form-label"></label>
                            <input asp-for="XacNhanMatKhauMoi" class="form-control" />
                            <span asp-validation-for="XacNhanMatKhauMoi" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="ThongTin" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-orange">
                                <i class="fas fa-save"></i> Đổi mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

