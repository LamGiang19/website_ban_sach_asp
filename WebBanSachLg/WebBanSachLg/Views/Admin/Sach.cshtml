@model IEnumerable<WebBanSachLg.Database.Sach>
@{
    ViewData["Title"] = "Quản lý Sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-book"></i> Quản lý Sách</h2>
    <a asp-action="SachCreate" class="btn btn-orange">
        <i class="fas fa-plus"></i> Thêm sách mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tên sách</th>
                        <th>Danh mục</th>
                        <th>Tác giả</th>
                        <th>NXB</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><strong>@item.TenSach</strong></td>
                            <td>@item.DanhMuc?.TenDanhMuc</td>
                            <td>@item.TacGia?.TenTacGia</td>
                            <td>@item.NhaXuatBan?.TenNhaXuatBan</td>
                            <td>@item.Gia.ToString("N0")₫</td>
                            <td>@item.SoLuong</td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Không hoạt động</span>
                                }
                            </td>
                            <td>
                                <a asp-action="SachEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <form asp-action="SachDelete" method="post" style="display: inline;" data-confirm="Bạn có chắc chắn muốn xóa sách này?">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

