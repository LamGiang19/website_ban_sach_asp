@{
    ViewData["Title"] = "Trang quản trị";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var hoTen = Context.Session.GetString("HoTen");
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-tachometer-alt"></i> Bảng điều khiển
                <span class="text-muted">- Chào mừng, @hoTen!</span>
            </h2>
        </div>
    </div>

    <!-- Thống kê -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Tổng sách</h6>
                            <h3>@ViewBag.TongSach</h3>
                        </div>
                        <div>
                            <i class="fas fa-book fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Tổng đơn hàng</h6>
                            <h3>@ViewBag.TongDonHang</h3>
                        </div>
                        <div>
                            <i class="fas fa-shopping-cart fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Tổng tài khoản</h6>
                            <h3>@ViewBag.TongTaiKhoan</h3>
                        </div>
                        <div>
                            <i class="fas fa-users fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Tổng doanh thu</h6>
                            <h3>@(((decimal)ViewBag.TongDoanhThu).ToString("N0"))₫</h3>
                        </div>
                        <div>
                            <i class="fas fa-dollar-sign fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Đơn hàng mới nhất -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-orange text-white">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Đơn hàng mới nhất</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.DonHangMoi != null && ((List<WebBanSachLg.Database.DonHang>)ViewBag.DonHangMoi).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Khách hàng</th>
                                        <th>Ngày đặt</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var donHang in (List<WebBanSachLg.Database.DonHang>)ViewBag.DonHangMoi)
                                    {
                                        <tr>
                                            <td>#@donHang.Id</td>
                                            <td>@donHang.TaiKhoan?.HoTen</td>
                                            <td>@donHang.NgayDat?.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@donHang.TongTien.ToString("N0")₫</td>
                                            <td>
                                                @switch (donHang.TrangThai)
                                                {
                                                    case "Chờ xử lý":
                                                        <span class="badge bg-warning">@donHang.TrangThai</span>
                                                        break;
                                                    case "Đang giao":
                                                        <span class="badge bg-info">@donHang.TrangThai</span>
                                                        break;
                                                    case "Đã giao":
                                                        <span class="badge bg-success">@donHang.TrangThai</span>
                                                        break;
                                                    case "Đã hủy":
                                                        <span class="badge bg-danger">@donHang.TrangThai</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@donHang.TrangThai</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <a href="#" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> Xem
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted">Chưa có đơn hàng nào</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

