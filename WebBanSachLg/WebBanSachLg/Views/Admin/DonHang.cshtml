@model IEnumerable<WebBanSachLg.Database.DonHang>
@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-shopping-cart"></i> Quản lý Đơn hàng</h2>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>#@item.Id</strong></td>
                            <td>@item.TaiKhoan?.HoTen</td>
                            <td>@item.NgayDat?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td><strong class="text-orange">@item.TongTien.ToString("N0")₫</strong></td>
                            <td>
                                @switch (item.TrangThai)
                                {
                                    case "Chờ xử lý":
                                        <span class="badge bg-warning">@item.TrangThai</span>
                                        break;
                                    case "Đang giao":
                                        <span class="badge bg-info">@item.TrangThai</span>
                                        break;
                                    case "Đã giao":
                                        <span class="badge bg-success">@item.TrangThai</span>
                                        break;
                                    case "Đã hủy":
                                        <span class="badge bg-danger">@item.TrangThai</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@item.TrangThai</span>
                                        break;
                                }
                            </td>
                            <td>
                                <a asp-action="DonHangDetails" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> Xem
                                </a>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                        Cập nhật
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form asp-action="DonHangUpdateStatus" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="trangThai" value="Chờ xử lý" />
                                                <button type="submit" class="dropdown-item">Chờ xử lý</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="DonHangUpdateStatus" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="trangThai" value="Đang giao" />
                                                <button type="submit" class="dropdown-item">Đang giao</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="DonHangUpdateStatus" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="trangThai" value="Đã giao" />
                                                <button type="submit" class="dropdown-item">Đã giao</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="DonHangUpdateStatus" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="trangThai" value="Đã hủy" />
                                                <button type="submit" class="dropdown-item text-danger">Đã hủy</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

