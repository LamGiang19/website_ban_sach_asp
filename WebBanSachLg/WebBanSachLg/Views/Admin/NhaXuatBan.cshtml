@model IEnumerable<WebBanSachLg.Database.NhaXuatBan>
@{
    ViewData["Title"] = "Quản lý Nhà xuất bản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building"></i> Quản lý Nhà xuất bản</h2>
    <a asp-action="NhaXuatBanCreate" class="btn btn-orange">
        <i class="fas fa-plus"></i> Thêm NXB mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tên NXB</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><strong>@item.TenNhaXuatBan</strong></td>
                            <td>@item.DiaChi</td>
                            <td>@item.SoDienThoai</td>
                            <td>@item.Email</td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Không hoạt động</span>
                                }
                            </td>
                            <td>
                                <a asp-action="NhaXuatBanEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <form asp-action="NhaXuatBanDelete" method="post" style="display: inline;" data-confirm="Bạn có chắc chắn muốn xóa nhà xuất bản này?">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

