@model WebBanSachLg.Database.NhaXuatBan
@{
    ViewData["Title"] = "Sửa nhà xuất bản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header bg-orange text-white">
        <h4><i class="fas fa-edit"></i> Sửa nhà xuất bản</h4>
    </div>
    <div class="card-body">
        <form asp-action="NhaXuatBanEdit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TenNhaXuatBan" class="form-label">Tên nhà xuất bản <span class="text-danger">*</span></label>
                    <input asp-for="TenNhaXuatBan" class="form-control" required />
                    <span asp-validation-for="TenNhaXuatBan" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SoDienThoai" class="form-label">Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="form-control" />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input name="TrangThai" class="form-check-input" type="checkbox" value="true" @(Model.TrangThai == true ? "checked" : "") />
                    <input type="hidden" name="TrangThai" value="false" />
                    <label class="form-check-label">Kích hoạt</label>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-orange">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
                <a asp-action="NhaXuatBan" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

