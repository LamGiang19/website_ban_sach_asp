@model WebBanSachLg.Database.DanhMuc
@{
    ViewData["Title"] = "Sửa danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header bg-orange text-white">
        <h4><i class="fas fa-edit"></i> Sửa danh mục</h4>
    </div>
    <div class="card-body">
        <form asp-action="DanhMucEdit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="TenDanhMuc" class="form-label">Tên danh mục <span class="text-danger">*</span></label>
                <input asp-for="TenDanhMuc" class="form-control" required />
                <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input name="TrangThai" class="form-check-input" type="checkbox" value="true" @(Model.TrangThai == true ? "checked" : "") />
                    <input type="hidden" name="TrangThai" value="false" />
                    <label class="form-check-label">Kích hoạt</label>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-orange">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
                <a asp-action="DanhMuc" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

