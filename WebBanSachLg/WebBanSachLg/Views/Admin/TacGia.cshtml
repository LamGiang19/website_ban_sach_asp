@model IEnumerable<WebBanSachLg.Database.TacGium>
@{
    ViewData["Title"] = "Quản lý Tác giả";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-edit"></i> Quản lý Tác giả</h2>
    <a asp-action="TacGiaCreate" class="btn btn-orange">
        <i class="fas fa-plus"></i> Thêm tác giả mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tên tác giả</th>
                        <th>Giới thiệu</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><strong>@item.TenTacGia</strong></td>
                            <td>@(item.GioiThieu?.Length > 50 ? item.GioiThieu.Substring(0, 50) + "..." : item.GioiThieu)</td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Không hoạt động</span>
                                }
                            </td>
                            <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="TacGiaEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <form asp-action="TacGiaDelete" method="post" style="display: inline;" data-confirm="Bạn có chắc chắn muốn xóa tác giả này?">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

