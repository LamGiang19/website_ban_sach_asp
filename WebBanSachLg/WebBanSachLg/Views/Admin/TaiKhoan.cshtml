@model IEnumerable<WebBanSachLg.Database.TaiKhoan>
@{
    ViewData["Title"] = "Quản lý Tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Quản lý Tài khoản</h2>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tên đăng nhập</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><strong>@item.TenDangNhap</strong></td>
                            <td>@item.HoTen</td>
                            <td>@item.Email</td>
                            <td>@item.SoDienThoai</td>
                            <td>
                                @if (item.VaiTro == "Admin")
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">User</span>
                                }
                            </td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Khóa</span>
                                }
                            </td>
                            <td>@item.NgayTao?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <form asp-action="TaiKhoanToggleStatus" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm @(item.TrangThai == true ? "btn-warning" : "btn-success")">
                                        <i class="fas fa-@(item.TrangThai == true ? "lock" : "unlock")"></i> 
                                        @(item.TrangThai == true ? "Khóa" : "Mở khóa")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

