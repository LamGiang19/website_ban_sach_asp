@model WebBanSachLg.Database.DonHang
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id + " - Vua Sách Cũ";
}

<div class="container mt-4">
    <h2><i class="fas fa-receipt"></i> Chi tiết đơn hàng #@Model.Id</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header bg-orange text-white">
                    <h5 class="mb-0">Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <p><strong>Ngày đặt:</strong> @Model.NgayDat?.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Trạng thái:</strong> 
                        @switch (Model.TrangThai)
                        {
                            case "Chờ xử lý":
                                <span class="badge bg-warning">@Model.TrangThai</span>
                                break;
                            case "Đang giao":
                                <span class="badge bg-info">@Model.TrangThai</span>
                                break;
                            case "Đã giao":
                                <span class="badge bg-success">@Model.TrangThai</span>
                                break;
                            case "Đã hủy":
                                <span class="badge bg-danger">@Model.TrangThai</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@Model.TrangThai</span>
                                break;
                        }
                    </p>
                    <p><strong>Họ tên người nhận:</strong> @Model.HoTenNguoiNhan</p>
                    <p><strong>Số điện thoại:</strong> @Model.SoDienThoai</p>
                    <p><strong>Địa chỉ giao hàng:</strong> @Model.DiaChiGiaoHang</p>
                    @if (!string.IsNullOrEmpty(Model.GhiChu))
                    {
                        <p><strong>Ghi chú:</strong> @Model.GhiChu</p>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Sản phẩm</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Hình ảnh</th>
                                    <th>Tên sách</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var chiTiet in Model.ChiTietDonHangs)
                                {
                                    var imagePath = WebBanSachLg.Helpers.FileUploadHelper.GetSachImagePath(chiTiet.Sach.HinhAnh);
                                    <tr>
                                        <td>
                                            @if (string.IsNullOrEmpty(chiTiet.Sach.HinhAnh))
                                            {
                                                <div class="cart-placeholder-small">
                                                    <i class="fas fa-book"></i>
                                                </div>
                                            }
                                            else
                                            {
                                                <img src="@imagePath" alt="@chiTiet.Sach.TenSach" style="width: 60px; height: 80px; object-fit: cover;" onerror="this.onerror=null; this.outerHTML='<div class=\'cart-placeholder-small\'><i class=\'fas fa-book\'></i></div>';">
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Sach" asp-action="Details" asp-route-id="@chiTiet.SachId">@chiTiet.Sach.TenSach</a>
                                        </td>
                                        <td>@chiTiet.Gia.ToString("N0")₫</td>
                                        <td>@chiTiet.SoLuong</td>
                                        <td>@((chiTiet.Gia * chiTiet.SoLuong).ToString("N0"))₫</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" class="text-end"><strong>Tổng tiền:</strong></td>
                                    <td><strong class="text-danger">@Model.TongTien.ToString("N0")₫</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
        @if (Model.TrangThai == "Chờ xử lý")
        {
            <button class="btn btn-danger btn-cancel-order" data-id="@Model.Id">
                <i class="fas fa-times"></i> Hủy đơn hàng
            </button>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-cancel-order').click(function() {
                var orderId = $(this).data('id');
                
                showConfirm(
                    'Bạn có chắc muốn hủy đơn hàng này?',
                    function() {
                        $.ajax({
                            url: '@Url.Action("Cancel", "DonHang")',
                            type: 'POST',
                            data: { id: orderId },
                            success: function(response) {
                                if (response.success) {
                                    showSuccess(response.message || 'Đã hủy đơn hàng thành công');
                                    setTimeout(function() {
                                        location.reload();
                                    }, 1500);
                                } else {
                                    showError(response.message || 'Có lỗi xảy ra');
                                }
                            },
                            error: function() {
                                showError('Có lỗi xảy ra. Vui lòng thử lại.');
                            }
                        });
                    }
                );
            });
        });
    </script>
}

