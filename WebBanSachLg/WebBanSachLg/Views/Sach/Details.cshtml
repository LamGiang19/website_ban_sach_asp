@model WebBanSachLg.Database.Sach
@{
    ViewData["Title"] = Model.TenSach + " - Vua Sách Cũ";
    var imagePath = WebBanSachLg.Helpers.FileUploadHelper.GetSachImagePath(Model.HinhAnh);
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="DanhMuc" asp-action="Details" asp-route-id="@Model.DanhMucId">@Model.DanhMuc.TenDanhMuc</a></li>
            <li class="breadcrumb-item active">@Model.TenSach</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <div class="placeholder-image-large">
                            <i class="fas fa-book fa-5x"></i>
                            <p>@Model.TenSach</p>
                        </div>
                    }
                    else
                    {
                        <img src="@imagePath" alt="@Model.TenSach" class="img-fluid" onerror="this.onerror=null; this.outerHTML='<div class=\'placeholder-image-large\'><i class=\'fas fa-book fa-5x\'></i><p>@Model.TenSach</p></div>';">
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h1>@Model.TenSach</h1>
            
            <div class="mb-3">
                <span class="badge bg-primary">@Model.DanhMuc.TenDanhMuc</span>
            </div>

            <div class="mb-3">
                <p class="text-muted mb-1"><strong>Tác giả:</strong> @Model.TacGia.TenTacGia</p>
                <p class="text-muted mb-1"><strong>Nhà xuất bản:</strong> @Model.NhaXuatBan.TenNhaXuatBan</p>
                <p class="text-muted mb-1"><strong>Số lượng còn:</strong> @Model.SoLuong cuốn</p>
            </div>

            <div class="mb-3">
                <h3 class="text-orange">@Model.Gia.ToString("N0")₫</h3>
            </div>

            @if (Model.SoLuong > 0)
            {
                <div class="mb-3">
                    <label class="form-label">Số lượng:</label>
                    <input type="number" id="soLuong" class="form-control" value="1" min="1" max="@Model.SoLuong" style="width: 100px;">
                </div>
                <button class="btn btn-orange btn-lg add-to-cart" data-id="@Model.Id" data-price="@Model.Gia" data-name="@Model.TenSach" data-image="@imagePath">
                    <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
                </button>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> Sản phẩm đã hết hàng
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.MoTa))
            {
                <div class="mt-4">
                    <h4>Mô tả sản phẩm</h4>
                    <p>@Model.MoTa</p>
                </div>
            }
        </div>
    </div>

    @if (ViewBag.SachCungDanhMuc != null && ((List<WebBanSachLg.Database.Sach>)ViewBag.SachCungDanhMuc).Any())
    {
        <div class="mt-5">
            <h3>Sách cùng danh mục</h3>
            <div class="row">
                @foreach (var sach in (List<WebBanSachLg.Database.Sach>)ViewBag.SachCungDanhMuc)
                {
                    <div class="col-md-3 mb-4">
                        @await Html.PartialAsync("_SachCard", sach)
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.add-to-cart').click(function() {
                var sachId = $(this).data('id');
                var soLuong = $('#soLuong').val() || 1;
                
                $.ajax({
                    url: '@Url.Action("AddToCart", "GioHang")',
                    type: 'POST',
                    data: { sachId: sachId, soLuong: soLuong },
                    success: function(response) {
                        if (response.success) {
                            showSuccess(response.message || 'Đã thêm vào giỏ hàng');
                            updateCartCount();
                        } else {
                            showError(response.message || 'Có lỗi xảy ra');
                        }
                    },
                    error: function() {
                        showError('Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            });
        });
    </script>
}

