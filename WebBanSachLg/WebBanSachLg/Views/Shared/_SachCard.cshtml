@model WebBanSachLg.Database.Sach

@{
    // Tính giá cũ (giả sử giảm 30-50%)
    var giamGia = new Random().Next(30, 51);
    var giaCu = Model.Gia * (100 + giamGia) / 100;
}

<div class="product-card">
    <div class="product-image">
        <a href="#">
            <img src="@(Model.HinhAnh ?? "/images/sach/default.jpg")" alt="@Model.TenSach" onerror="this.src='/images/sach/default.jpg'">
        </a>
    </div>
    <div class="product-info">
        <h6 class="product-title">
            <a href="#">@Model.TenSach</a>
        </h6>
        <div class="product-price">
            <span class="current-price text-orange">@Model.Gia.ToString("N0")₫</span>
            <span class="old-price">@giaCu.ToString("N0")₫</span>
        </div>
        <div class="product-actions">
            <button class="btn btn-sm btn-orange add-to-cart" data-id="@Model.Id" data-price="@Model.Gia" data-name="@Model.TenSach" data-image="@(Model.HinhAnh ?? "/images/sach/default.jpg")">
                <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
            </button>
        </div>
    </div>
</div>
