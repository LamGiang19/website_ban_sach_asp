@model WebBanSachLg.Database.Sach

<div class="product-card">
    <div class="product-image">
        <a href="#">
            <img src="@(Model.HinhAnh ?? "/images/sach/default.jpg")" alt="@Model.TenSach" onerror="this.src='/images/sach/default.jpg'">
        </a>
        <div class="product-overlay">
            <button class="btn btn-sm btn-primary quick-view" data-id="@Model.Id">
                <i class="fas fa-eye"></i> Xem nhanh
            </button>
        </div>
    </div>
    <div class="product-info">
        <h6 class="product-title">
            <a href="#">@Model.TenSach</a>
        </h6>
        <div class="product-price">
            <span class="current-price">@Model.Gia.ToString("N0")₫</span>
            @* <span class="old-price">@((Model.Gia * 1.5m).ToString("N0"))₫</span> *@
        </div>
        <div class="product-actions">
            <button class="btn btn-sm btn-outline-primary add-to-cart" data-id="@Model.Id" data-price="@Model.Gia">
                <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
            </button>
        </div>
    </div>
</div>

