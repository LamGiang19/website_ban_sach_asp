@using WebBanSachLg.Database

<header class="site-header">
    <!-- Top Bar - Orange -->
    <div class="header-top bg-orange">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="header-contact text-white">
                        <span><i class="fas fa-phone"></i> Bạn cần hỗ trợ: <strong>0828899333</strong></span>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <div class="header-links text-white d-flex align-items-center justify-content-end gap-2">
                        @if (string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {
                            <a asp-controller="TaiKhoan" asp-action="DangKy" class="btn-header-link text-white">
                                <i class="far fa-user-plus"></i> <span>Đăng ký</span>
                            </a>
                            <span class="text-white">|</span>
                            <a asp-controller="TaiKhoan" asp-action="DangNhap" class="btn-header-link text-white">
                                <i class="far fa-sign-in-alt"></i> <span>Đăng nhập</span>
                            </a>
                        }
                        else
                        {
                            <div class="user-info d-flex align-items-center gap-2">
                                <div class="user-avatar">
                                    <i class="far fa-user-circle"></i>
                                </div>
                                <div class="user-details">
                                    <span class="text-white fw-semibold">
                                        @Context.Session.GetString("HoTen")
                                        @if (Context.Session.GetString("VaiTro") == "Admin")
                                        {
                                            <span class="badge bg-danger ms-1 rounded-pill">Admin</span>
                                        }
                                    </span>
                                </div>
                            </div>
                            <span class="text-white">|</span>
                            <a asp-controller="TaiKhoan" asp-action="DangXuat" class="btn-header-link text-white">
                                <i class="far fa-sign-out-alt"></i> <span>Đăng xuất</span>
                            </a>
                        }
                        <a asp-controller="GioHang" asp-action="Index" class="btn btn-sm btn-cart-top text-white">
                            <i class="fas fa-shopping-cart"></i> <span>Giỏ hàng</span> <span class="cart-count badge bg-white text-orange ms-1">0</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Main Navigation - White -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <div class="logo-wrapper">
                    <span class="logo-icon">B</span>
                    <strong class="logo-text">VUA SÁCH CŨ</strong>
                </div>
            </a>
            
            <!-- Search Bar -->
            <div class="search-bar-wrapper flex-grow-1 mx-4">
                <form class="search-form" asp-controller="Sach" asp-action="Search" method="get">
                    <div class="input-group">
                        <select class="form-select category-select" name="categoryId" style="max-width: 150px;">
                            <option value="">Chọn danh mục</option>
                            @await Component.InvokeAsync("DanhMuc")
                        </select>
                        <input type="text" class="form-control" name="keyword" placeholder="Tìm kiếm..." aria-label="Search">
                        <button class="btn btn-orange" type="submit">
                            <i class="far fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>
    
    <!-- Product Category Bar - Orange -->
    <div class="category-navbar bg-orange">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <span class="category-nav-title text-white">
                        <i class="far fa-bars"></i> DANH MỤC SẢN PHẨM
                    </span>
                </div>
                <div class="col-md-9">
                    <ul class="category-nav-list">
                        <li><a asp-controller="Home" asp-action="Index" class="text-white">Trang chủ</a></li>
                        <li><a asp-controller="DanhMuc" asp-action="Index" class="text-white">Danh mục</a></li>
                        <li><a asp-controller="Sach" asp-action="Index" class="text-white">Tất cả sách</a></li>
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {
                            <li><a asp-controller="DonHang" asp-action="Index" class="text-white">Đơn hàng</a></li>
                            <li><a asp-controller="TaiKhoan" asp-action="ThongTin" class="text-white">Tài khoản</a></li>
                        }
                        @if (Context.Session.GetString("VaiTro") == "Admin")
                        {
                            <li><a asp-controller="Admin" asp-action="Index" class="text-white"><i class="far fa-cog"></i> Quản trị</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
